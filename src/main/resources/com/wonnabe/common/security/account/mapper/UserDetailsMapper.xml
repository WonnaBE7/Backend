<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wonnabe.common.security.account.mapper.UserDetailsMapper">

    <select id="findByEmail" resultType="com.wonnabe.common.security.account.domain.UserVO">
        SELECT
            user_id,
            name,
            email,
            password_hash
        FROM User_Profile
        WHERE email = #{email}
          AND deleted_at IS NULL
    </select>
    <select id="findByUserUUID" resultType="com.wonnabe.common.security.account.domain.UserVO">
        SELECT
            user_id AS userId,
            name,
            email,
            password_hash
        FROM User_Profile
        WHERE user_id = #{userUUID}
          AND deleted_at IS NULL
    </select>

</mapper>
